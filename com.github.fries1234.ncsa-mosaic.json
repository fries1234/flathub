{
    "app-id": "com.github.fries1234.ncsa-mosaic",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "Mosaic",
    "finish-args": [
        "--filesystem=host",
        "--share=network",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "xbitmaps",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xorg.freedesktop.org/releases/individual/data/xbitmaps-1.1.2.tar.bz2",
                    "sha256": "b9f0c71563125937776c8f1f25174ae9685314cbd130fb4c2efce811981e07ee"
                }
            ]
        },
        {
            "name": "libxmu",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xorg.freedesktop.org/releases/individual/lib/libXmu-1.1.3.tar.bz2",
                    "sha256": "9c343225e7c3dc0904f2122b562278da5fed639b1b5e880d25111561bac5b731"
                }
            ]
        },
        {
            "name": "libxft",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xorg.freedesktop.org/releases/individual/lib/libXft-2.3.4.tar.bz2",
                    "sha256": "57dedaab20914002146bdae0cb0c769ba3f75214c4c91bd2613d6ef79fc9abdd"
                }
            ]
        },
        {
            "name": "openmotif",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/motif/Motif%202.3.8%20Source%20Code/motif-2.3.8.tar.gz",
                    "sha256": "859b723666eeac7df018209d66045c9853b50b4218cecadb794e2359619ebce7"

                }
            ],
            "post-install": [
                "rm -rf /app/lib/*.a"
            ]
        },
        {
            "name": "mosaic",
            "buildsystem": "simple",
            "build-commands": [
                "make linux customflags=\"-fcommon -I/app/include\" ldflags=-L/app/lib -j$(nproc)",
                "install -Dm755 src/Mosaic -t /app/bin",
                "install -Dm644 com.github.fries1234.ncsa-mosaic.desktop /app/share/applications/com.github.fries1234.ncsa-mosaic.desktop",
                "install -Dm644 com.github.fries1234.ncsa-mosaic.appdata.xml /app/share/metainfo/com.github.fries1234.ncsa-mosaic.appdata.xml",
                "install -Dm644 com.github.fries1234.ncsa-mosaic-symbolic.svg /app/share/icons/hicolor/symbolic/apps/com.github.fries1234.ncsa-mosaic-symbolic.svg",
                "install -Dm644 com.github.fries1234.ncsa-mosaic.png /app/share/icons/hicolor/256x256/apps/com.github.fries1234.ncsa-mosaic.png",
                "install -Dm644 com.github.fries1234.ncsa-mosaic.128px.png /app/share/icons/hicolor/128x128/apps/com.github.fries1234.ncsa-mosaic.png",
                "install -Dm644 com.github.fries1234.ncsa-mosaic.64px.png /app/share/icons/hicolor/64x64/apps/com.github.fries1234.ncsa-mosaic.png"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fries1234/ncsa-mosaic",
                    "branch": "master",
                    "commit": "a7f06bb8ca064f6167ff51a361326ae27912ef79"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic.desktop"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic-symbolic.svg"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic.png"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic.128px.png"
                },
                {
                    "type": "file",
                    "path": "com.github.fries1234.ncsa-mosaic.64px.png"
                }
            ],
            "post-install": [
                "rm -rf /app/bin/uil /app/bin/mwm /app/bin/xmbind /app/share/Xm /app/share/man /app/include/*"
            ]
        }
    ]
}
